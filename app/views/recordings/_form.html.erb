
<%= form_for recording do |f|%>

  <% if recording.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(recording.errors.count, "error") %>
        prohibited recording from being saved:
      </h2>

      <ul>
      <% recording.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <%= f.submit %>
<% end %>
